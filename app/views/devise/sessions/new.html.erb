<div class="col-xs-2">
</div>

<div class="col-xs-8">
  <div class="centered title-font font-s">
    Enter
  </div>

  <div class="well">   

    <div class="form-field">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.label :user_name, class: "font-s" %>
          <br>
          <%= f.text_field :user_name, autofocus: true, class: "form-control form-l" %>
          <br>
          <%= f.label :email, class: "font-s" %>
          <br>
          <%= f.email_field :email, class: "form-control form-l" %>
          <br>
          <%= f.label :password, class: "font-s" %>
          <br>
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-l" %>
          <br>
        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "font-s" %>
        <% end %>
        <br>
         <button type="submit" class="add-btn">
                <i class="fa fa-sign-in sign-f"></i>  
      <% end %>
    </div>
    <div class="font-s">
    <%= render "devise/shared/links" %>
    </div>

  </div>







