
<container>
  
<div class="cool">
<h1> Current Project </h1>
</div>
<hr>
<h3> Project title </h3>
<%=@project.title%>
<br>
<h3> Project body </h3>
<%=@project.body%>
<br>
<hr>
<%=link_to "Edit this project", edit_project_path, class: "btn btn-default cool"%>
<%=link_to "Delete this project", project_path, method: :delete, 
data: { confirm: "Are you Sure?"}, class: "btn btn-default cool" %>
<%=link_to "Like this project", project_likes_path(@project), method: :post, class: "btn btn-default cool"%>
(<%=@project.likes.count%>)



<hr>
<hr>


<div class="cool">
<h1> Current Tasks </h1>
</div>
<hr>

<% @tasks.each do |task| %>
<h4> Task Title </h4>
<%= task.title %>
<br>
<h4> Task body </h4>
<%= task.body %>
<%=link_to "Delete this task", project_task_path(@project, task), method: :delete, 
data: { confirm: "Are you Sure?"}, class: "btn btn-default cool buttonbump" %>
<hr>
<%end%>


<hr>
<h4> Create a new task for this project </h4>

<div class ="form-field">
<%=form_for @task, url: project_tasks_path(@project) do |x| %>
<%=x.label :title%>
<%=x.text_area :title, class:"form-control" %>
<br>
<%=x.label :body %>
<%=x.text_area :body, class:"form-control" %>
<br>
<%=x.submit class: "btn btn-default changed"%>
</div>


<%#= button_to() ,method: post %>

</container>

<%end%> 





